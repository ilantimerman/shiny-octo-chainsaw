<section class="column background-black pl-6 pr-6" id="player-page-buttons">
    <div class="box background-white" id="timer">
        <h4 class="text-black" id="timer-label">
            Round {{ game.number }} 
        </h4>
    </div>

    {{!-- hidden until display button clicked --}}
    <button href="api/game" class="button is-fullwidth background-red mb-4" id="hide">
        Hide Role
    </button>
    {{!-- hidden after clicked and visible again after hide button clicked --}}
    <button href="/" class="button is-fullwidth mb-4 background-blue" id="display">
        Display Role
    </button>

    {{!-- visible when hide button is visible --}}
    <div class="box background-white has-text-centered">
        <figure class="is-inline-block">
            <img src="./images/swords.png">
        </figure>
        <h3 class="text-black mt-0">
            {{ role.name }}
        </h3>
        <h4 class="text-black">
            Loyalty: {{ role.loyalty }}
        </h4>
        <h4 class="text-black">
            Ability: {{ role.ability }}
        </h4>
        <h4 class="text-black">
            Win Conditions: {{ role.winCondition1 }}, {{ role.winCondition2 }}
        </h4>
        <h4 class="text-black">
            Footnote: {{ role.footnote }}
        </h4>
    </div>
</section>