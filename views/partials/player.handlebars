<section class="column background-black pl-6 pr-6 mt-4" id="player-page-buttons">
    <div class="box background-white" id="timer">
        <h4 class="text-black" id="timer-label">
            Round {{ game.number }} 
        </h4>
    </div>

    {{!-- hidden until display button clicked --}}
    <button href="api/game" class="button is-fullwidth background-red mb-4" id="hide">
        Hide Role
    </button>
    {{!-- hidden after clicked and visible again after hide button clicked --}}
    <button href="/" class="button is-fullwidth mb-4 background-blue" id="display">
        Display Role
    </button>

    {{!-- visible when hide button is visible --}}
    <div class="box background-white has-text-centered">
        <figure class="is-inline-block">
            <img src="https://img.icons8.com/external-dreamstale-lineal-dreamstale/64/000000/external-shield-security-dreamstale-lineal-dreamstale-7.png">
        </figure>
        <h3 class="text-black mt-0">
            {{!-- {{ role.name }} --}}
            Guard
        </h3>
        <h4 class="text-black">
            Loyalty: Red
            {{!-- {{ role.loyalty }} --}}
        </h4>
        <h4 class="text-black">
            Ability: Protect the Red King from the Blue Assassin
            {{!-- {{ role.ability }} --}}
        </h4>
        <h4 class="text-black">
            Win Conditions: The Red King Survives, Finish in the Red Court
            {{!-- {{ role.winCondition1 }}, {{ role.winCondition2 }} --}}
        </h4>
        <h4 class="text-black">
            <b>{{!-- {{ role.footnote }} --}}</b>
        </h4>
    </div>
</section>

<!-- Right Column -->
<section class="column is-12-mobile is-8-tablet text-white pt-0" id="right-column">